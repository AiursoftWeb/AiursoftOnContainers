@model Aiursoft.EE.Models.ProfileViewModels.FollowingsViewModel
@{
    ViewData["Title"] = "Followings";
}
<div class="container">
    <div class="row">
        @(await Html.PartialAsync("_Left", Model.LeftContent))
        <div class="col-md-9 mt-3">
            @(await Html.PartialAsync("_Up", Model.UpContent))
            <div class="row">
                @foreach (var fol in Model.Followings)
                {
                    <div class="col-sm-8">
                        <img class="aiuruser-img mt-3" src="@fol.Receiver.HeadImgUrl?w=60&h=60" />
                        <a asp-controller="Profile" asp-action="Overview" asp-route-id="@fol.ReceiverId">
                            <h3 class="mt-3">@fol.Receiver.NickName</h3>
                        </a>
                        <p>Lorem ipsum dolor sit amet.</p>
                    </div>
                    <div class="col-sm-2">
                        <form asp-controller="Profile" asp-action="Unfollow" id="folloform@(fol.Id)">
                            <input type="hidden" name="id" value="@fol.ReceiverId" />
                            <input type="hidden" name="redirectAction" value="Followings" />
                        </form>
                        <a class="btn btn-outline-danger mt-3" href="javascript:$('#folloform@(fol.Id)').submit()">
                            UnFollow
                            <i class="fa fa-star"></i>
                        </a>
                    </div>
                    <hr />
                }
            </div>
        </div>
    </div>
</div>