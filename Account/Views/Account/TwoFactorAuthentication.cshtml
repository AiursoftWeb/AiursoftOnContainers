@model Aiursoft.Account.Models.AccountViewModels.TwoFactorAuthenticationViewModel
@{
    ViewData["Title"] = "Two-factor authentication";
}
<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Account" asp-action="TwoFactorAuthentication">@Localizer["Two-factor authentication"]</a>
        </li>
        <li class="breadcrumb-item active">
            @ViewData["Title"]
        </li>
    </ol>
    <div class="col-md-8 pl-0">
        <div class="card mb-3">
            <div class="card-body">
                <div class="card-header">
                    <i class="fa fa-fw fa-address-card"></i>
                    @Localizer["TwoFactorAuthentication Settings"]
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        @if (!Model.NewHas2FAKey)
                        {
                            <p>
                                Click the button below, and follow the prompts to start to configure your Two Factor Authentication function.
                            </p>
                            <P>
                                <a asp-controller="Account" asp-action="" class="btn btn-success">@Localizer["Configure 2fa key"]</a>
                            </P>
                        }
                        else
                        {
                            <p>
                                Click to view the dimension code or key required by authentication app.
                            </p>
                            <P>
                                <a asp-controller="Account" asp-action="" class="btn btn-success">@Localizer["View 2fa key"]</a>
                            </P>
                            <p>
                                Click to reset 2fa key.
                                If you click this button, you will need to re-enter the Verify Code in the Authentication app to enable the 2fa security authentication function.
                            </p>
                            <P>
                                <a asp-controller="Account" asp-action="" class="btn btn-success">@Localizer["Reset 2fa key"]</a>
                            </P>
                            if (!Model.NewTwoFactorEnabled)
                            {
                                <P>
                                    Click the button below to verify the verify code generated by the authentication app to enable the two factor authentication security verification function.
                                </P>
                                <P>
                                    <a asp-controller="Account" asp-action="" class="btn btn-success">@Localizer["Verify authentication"]</a>
                                </P>
                            }
                            else
                            {
                                <P>
                                    You have enabled the 2fa function.
                                    <br />You need to enter the Verify Code in the Authentication App when you log in.
                                    You can log in through recovery codes when you cannot use the Authentication App. Recovery Codes are unique. The same Recovery Codes can only be viewed once. You can get your recovery codes in two ways
                                    <br />1. When you have 2fa key and enter verify code, you will get your recovery codes.
                                    <br />2. Click the button below to generate a new Verify Codes.
                                </P>
                                <P>
                                    <a asp-controller="Account" asp-action="" class="btn btn-success">@Localizer["Set Recovery codes"]</a>
                                </P>
                            }
                            <p>
                                Click to disable 2fa.
                            </p>
                            <p>
                                <a asp-controller="Account" asp-action="" class="btn btn-success">@Localizer["Disable 2fa"]</a>
                            </p>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>