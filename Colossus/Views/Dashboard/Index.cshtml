@model Aiursoft.Colossus.Models.DashboardViewModels.IndexViewModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = Model.Title;
}
<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-inbox ico"></i>
            All files your uploaded in Colossus
        </div>
        <div class="card-body">
            <div class="col-xs-12">
                <div class="table-responsive">
                    <table class="table table-striped datatable">
                        <thead>
                            <tr>
                                <th>File Name</th>
                                <th>Open to upload</th>
                                <th>Size(KB)</th>
                                <th>Download Time</th>
                                <th>Upload Time</th>
                                <th>Deadline</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var fileRecord in Model.Files)
                            {
                                <tr>
                                    <td>@fileRecord.RealFileName</td>
                                    <td>
                                        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                            <a href="@fileRecord.InternetPath?sd=true" target="_blank" class="btn btn-secondary">Download</a>
                                            <div class="btn-group" role="group">
                                                <button id="btnGroupDrop1" type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    More
                                                </button>
                                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                                    <a class="dropdown-item" href="@fileRecord.InternetPath" target="_blank">Open</a>
                                                    <a class="dropdown-item" href="#" data-toggle="tooltip" data-trigger="click" title="copied!" data-clipboard-text="@fileRecord.InternetPath">Copy link</a>
                                                    <a class="dropdown-item" asp-controller="Files" asp-action="GenerateLink" asp-route-id="@fileRecord.FileKey" target="_blank">Get One-time link</a>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@string.Format("{0:N}", Math.Round(d: (decimal)fileRecord.JFileSize / 1024, decimals: 2))</td>
                                    <td>@fileRecord.DownloadTimes</td>
                                    <td data-utc-time="@fileRecord.UploadTime"></td>
                                    <td>@((fileRecord.UploadTime + new TimeSpan(fileRecord.AliveDays, 0, 0, 0)).ToString("yyyy-MM-dd"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-md-12 margin-top-30">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-success">Upload new file</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section js{
    <script>
        $(document).ready(function () {
            function timeSince(date) {
                var seconds = Math.floor((new Date() - date) / 1000);
                var interval = Math.floor(seconds / 2592000);
                if (interval > 1) {
                    return date.toLocaleDateString();;
                }
                interval = Math.floor(seconds / 86400);
                if (interval > 1) {
                    return interval + " days ago";
                }
                interval = Math.floor(seconds / 3600);
                if (interval > 1) {
                    return interval + " hours ago";
                }
                interval = Math.floor(seconds / 60);
                if (interval > 1) {
                    return interval + " minutes ago";
                }
                return Math.floor(seconds) + " seconds ago";
            }
            $('*[data-utc-time]').each(function (t) {
                // Prepare
                var timefield = $(this);
                var timevalue = timefield.attr('data-utc-time');
                if (!timevalue.endsWith(' UTC')) {
                    timevalue = timevalue + ' UTC';
                }
                var date = new Date(timevalue);
                var text = timeSince(date);
                timefield.html(text);
            });
        });
    </script>
}