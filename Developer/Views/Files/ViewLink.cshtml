@model Aiursoft.Developer.Models.FilesViewModels.ViewLinkViewModel
@{
    ViewData["Title"] = "One Time Link";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Apps" asp-action="Index">@Localizer["Dashboard"]</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Files" asp-action="Index">@Localizer["Files"]</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">x</span></button>
        <strong>@Localizer["Caution!"]</strong> @Localizer["Once you clicked 'Open' button, the link will be used one time!"]
    </div>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-trash ico"></i>
            @Localizer["Access Link"]
        </div>
        <div class="card-body">
            <div class="col-12">
                <div class="box-content bordered danger">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input value="@(ServiceLocation.OSSEndpoint)/download/fromsecret?sec=@Model.Address" readonly="readonly" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-12 margin-top-30">
                            <a class="btn btn-success waves-effect waves-light" href="#" data-toggle="tooltip" data-trigger="click" title="copied!" data-clipboard-text="@(ServiceLocation.OSSEndpoint)/download/fromsecret?sec=@Model.Address">@Localizer["Copy link"]</a>
                            <a class="btn btn-danger" href="@(ServiceLocation.OSSEndpoint)/download/fromsecret?sec=@Model.Address" target="_blank">@Localizer["Open Link"]</a>
                            <a class="btn btn-info" asp-controller="Files" asp-action="ViewFiles" asp-route-id="@Model.BucketId">@Localizer["Back to files"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
