@model Aiursoft.Developer.Models.SamplesViewModels.FormSampleViewModel
@{
    ViewData["Title"] = "jquery upload progress";
    Layout = "../Home/_Layout";
}


<div class="jumbotron">
    <div class="container">
        <h3>jquery-upload-progress</h3>
        <p>A library to show progress and open button for file uploader.</p>
        <div class="btn-group" role="group">
            <a class="btn btn-primary btn-lg" href="//github.com/Anduin2017/jquery-upload-progress" target="_blank" role="button">
                <i class="fa fa-github"></i>
                View it on github
            </a>
        </div>
    </div>
</div>

<div class="container">
    <h2 class="mt-3">jquery-upload-progress form example</h2>
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">@Localizer["×"]</span></button>
        <strong>@Localizer["You have successfully submitted the form."]</strong>
        <div>@Localizer["You have successfully submitted your homework. Now you can play computer games! Have fun!"]</div>
    </div>

    <div class="col-lg-8 col-md-12">
        <div class="card mb-5">
            <div class="card-header">
                <i class="fa fa-bar-chart"></i>
                Your homework is here
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" readonly="readonly" placeholder="Enter your app name...">
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" readonly="readonly" placeholder="Enter your email...">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <label asp-for="IconAddress" class="w-100"></label>
                    <input asp-for="IconAddress" class="form-control" type="text" readonly="readonly" id="@nameof(Model.IconAddress)">
                </div>
                <img class="img-fluid mb-3" src="@Model.IconAddress" id="avatar">

                <div class="input-group mb-3">
                    <label asp-for="HomeworkAddress" class="w-100"></label>
                    <input asp-for="HomeworkAddress" class="form-control" type="text" readonly="readonly" id="@nameof(Model.HomeworkAddress)">
                </div>
                <a class="btn btn-success" href="@Model.HomeworkAddress">Download your homework</a>
                <a asp-controller="Samples" asp-action="FormSample" class="btn btn-secondary">Go back</a>
            </div>
        </div>
    </div>
</div>