@model Aiursoft.Pylon.Models.API.OAuthViewModels.TwoFAAuthorizeConfirmViewModel
@{
    ViewData["Title"] = "Authorize Confirm";
}
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">
            <i class="fa fa-shield"></i>
            @Localizer["Authorize Confirm"]
        </div>
        <div class="card-body">
            <div class="text-center mt-4 mb-5">
                <h4>Hello @Html.DisplayFor(t => t.UserNickName) !</h4>
                <p>@Localizer["Do you want to use your {0} identity to sign in", Values.ProjectName] </p>
                <p><strong>@Html.DisplayFor(t => t.AppName)</strong>@Localizer["?"]</p>
            </div>
            <form asp-controller="OAuth" asp-action="TwoFAAuthorizeConfirm" method="post"
                  asp-route-appid="@Model.AppId"
                  asp-route-redirect_uri="@Model.RedirectUri"
                  asp-route-state="@Model.State">
                <p>
                    <a asp-action="Authorize" asp-controller="OAuth"
                       asp-route-appid="@Model.AppId"
                       asp-route-redirect_uri="@Model.RedirectUri"
                       asp-route-state="@Model.State"
                       asp-route-force-confirm="true">
                        @Localizer["Click here"]
                    </a>@Localizer["to switch to another account."]
                </p>
                <div class="row">
                    <input class="form-control" asp-for="Email" type="hidden" value="@Model.Email">
                    <input class="form-control" asp-for="VerifyCode" placeholder="@Localizer["Enter your Verify Code"]">
                    <div class="col-md-4 mt-3">
                        <button class="btn btn-block btn-success" data-disable-with="Saving..." type="submit">@Localizer["Submit"]</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>